package training_Java;

public class Two_Dimensional_Array 
{

	public static void main(String[] args) 
	{
		
								/// Rows & columns
		String Str[][]=new String [3][4];
		
		Str [0][0]="A";
		Str [0][1]="B";
		Str [0][2]="C";
		Str [0][3]="D";
		
		Str [1][0]="A1";
		Str [1][1]="B1";
		Str [1][2]="C1";
		Str [1][3]="D1";
		
		Str [2][0]="A2";
		Str [2][1]="B2";
		Str [2][2]="C2";
		Str [2][3]="D2";
		
		System.out.println("Rows are"+Str.length);
		
		System.out.println("Columns are" +Str[0].length);
		
		int row=Str.length;
		
		int col=Str[0].length;
		
		for(int i=0 ; i<row ;i++)
		{
			for(int j=0 ;j<col ;j++)
			{
				System.out.print(Str[i][j]+"---");
			}
			
			System.out.println();
		}
		
		
		
		
		
	}

}
